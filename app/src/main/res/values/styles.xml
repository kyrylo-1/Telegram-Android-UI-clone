<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close_gray</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>



    </style>


    <!--<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">-->

    <!--</style>-->

    <style name="AppAlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_big_inset</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/brightBlue</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/brightBlue</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/brightBlue</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Material.Dialog.NoActionBar.MinWidth">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="colorAccent">@color/brightBlue</item>
    </style>


    <style name="BasicEditText">
        <item name="android:cursorVisible">true</item>
        <item name="android:ems">10</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="EditTextInfo" parent="BasicEditText">
        <item name="android:maxLines">1</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorPressedHighlight">@color/brightBlue</item>
    </style>

    <style name="TextViewMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">61dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>

        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MessageTimeTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">66:67</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginEnd">22dp</item>
    </style>

    <style name="LayoutOfMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextView_Bottom_Sheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">16sp</item>

        <item name="android:longClickable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>

    </style>

</resources>
